<h1>Create new list</h1>

<% if @list.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@list.errors.count, "error") %> prohibited
        this list from being saved:
      </h2>
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li> <%= @list.name %> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for :list, url: lists_path do |l| %>
    <p>
        <%= l.label :name %><br>
        <%= l.text_field :name %>
    </p>
  
    <p>
      <%= l.submit %>
    </p>
<% end %>

<%= link_to 'Back', lists_path %>